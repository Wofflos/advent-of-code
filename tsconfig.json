{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "paths": {
            "@utils/*": ["./utils/*"]
        },
        "esModuleInterop": true
    },
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "esm": true
    }
}
